<Window x:Class="homework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:homework"
        mc:Ignorable="d"
        Title="Автобусный парк" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowVm/>
    </Window.DataContext>
    <Grid>
        <TabControl Margin="10,10,10,10">
            <TabItem Header="Автобусный парк">
                <Grid Background="#FFE5E5E5">
                    <DataGrid Margin="10,10,10,10" AutoGenerateColumns="True" ItemsSource="{Binding BusPark}"/>
                </Grid>
            </TabItem>
            <TabItem Header="В парке">
                <Grid Background="#FFE5E5E5">
                    <DataGrid Margin="10,10,10,10" AutoGenerateColumns="True" ItemsSource="{Binding InPark}"/>
                </Grid>
            </TabItem>
            <TabItem Header="Вне парка" Margin="-2,-2,-2,0">
                <Grid Background="#FFE5E5E5">
                    <DataGrid Margin="10,10,10,10" AutoGenerateColumns="True" ItemsSource="{Binding OutPark}"/>
                </Grid>
            </TabItem>
        </TabControl>





    </Grid>
</Window>
